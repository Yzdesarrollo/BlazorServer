@inherits LayoutComponentBase

@*<RedirectToLogin />*@

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView>
                <Authorized>
                    <span>@context.User.Identity.Name</span>
                    <span>
                        <a href="/account/logout">Salir</a>
                    </span>
                </Authorized>
                <NotAuthorized>
                       <span>
                        <a href="/account/loging">Iniciar Sesión</a>
                    </span>
                </NotAuthorized>
            </AuthorizeView>


        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
